<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hdc.rjxy.mapper.PlatformMapper">
    <select id="findEnabledById" resultType="hdc.rjxy.pojo.Platform">
        SELECT id, code, name, enabled
        FROM platform
        WHERE id = #{id} AND enabled = 1
        LIMIT 1
    </select>

    <select id="findIdByCode" resultType="long">
        SELECT id FROM platform WHERE code = #{code} LIMIT 1
    </select>
</mapper>
